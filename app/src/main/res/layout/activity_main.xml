<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Intents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intents"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="50sp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:background="@color/purple"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_Intents"
        android:background="@drawable/rounded_et"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:hint="  Введите почту"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingHorizontal="10dp"
        />

    <EditText
        android:id="@+id/et_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:hint="  Введите тему"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/rounded_et"
        android:paddingVertical="20dp"
        android:drawableLeft="@drawable/ic_density"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        />

    <EditText
        android:id="@+id/et_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_theme"
        android:background="@drawable/rounded_et"
        android:paddingVertical="20dp"
        android:drawableLeft="@drawable/ic_comment"
        android:hint="Введите письмо"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="150dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_letter"
        android:text="Send"
        android:textAllCaps="true"
        android:textSize="30sp"
        app:cornerRadius="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>